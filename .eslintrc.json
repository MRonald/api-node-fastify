{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard-with-typescript",
        "prettier",
        "prettier/prettier",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": "off",
        "@typescript-eslint/strict-boolean-expressions": "off",
        "@typescript-eslint/no-useless-constructor": "off"
    }
}
